{
  "manifest_version": 3,
  "name": "Norwegian Mouseover Dictionary",
  "version": "1.0",
  "description": "Shows Bokm√•l and/or Nynorsk translations when hovering over a word.",
  "permissions": [
  "storage"
],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["dictionary.json", "nynorsk_dictionary.json"],
    "matches": ["<all_urls>"]
  }]
}
